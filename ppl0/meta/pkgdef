[ppl-utils]
pkgname="${pkgprefix}ppl-utils"
name="ppl-utils - Utilities using ppl"
pkgcat="system"
pkgvendor="http://bugseng.com/products/ppl/"
pkgdesc="The Parma Polyhedra Library (PPL) provides numerical abstractions"
pkgver="$pkgver"
files(-,root,bin)
$_bindir/ppl_lcdd
$_bindir/ppl_pips
$_mandir/man1/ppl_lcdd.1*
$_mandir/man1/ppl_pips.1*

