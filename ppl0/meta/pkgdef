$_vdocdir/ppl-user-${version}-html
$_vdocdir/ppl-user-${version}.pdf
$_vdocdir/ppl-user-c-interface-${version}-html
$_vdocdir/ppl-user-c-interface-${version}.pdf
$_vdocdir/ppl-user-${version}.ps.gz
$_vdocdir/ppl-user-c-interface-${version}.ps.gz

